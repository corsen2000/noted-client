<div class="row">
    <div class="col-md-12">
        <form role="form" {{action updateNote on="submit"}}>
            <div class="form-group">
                {{input value=title class="form-control" placeholder="Title"}}
            </div>
            <div class="form-group">
                {{textarea 
                    value=content.content 
                    class="form-control new-note-content" 
                    placeholder="Content (Markdown)"
                }}
            </div>
            <div class="form-group">
                {{input value=tags class="form-control" placeholder="Tags"}}
            </div>
            <button type="submit" class="btn btn-default">Update Note</button>
        </form>        
    </div>
</div>