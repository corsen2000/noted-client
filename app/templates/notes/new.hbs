<div class="row">
    <div class="col-md-12">
        <form role="form">
            <div class="form-group">
                <input type="text" class="form-control" id="note-title" placeholder="Title">
            </div>
            <div class="form-group">
                <textarea class="form-control" id="note-content" placeholder="Content (Markdown)" style="height: 450px;"></textarea>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="note-tags" placeholder="Tags">
            </div>
            <button type="submit" class="btn btn-default">Create Note</button>
        </form>        
    </div>
</div>