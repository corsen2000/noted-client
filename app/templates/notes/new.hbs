<div class="row">
    <div class="col-md-12">
        <form role="form" {{action createNote on="submit"}}>
            <div class="form-group">
                {{input value=noteTitle class="form-control" placeholder="Title"}}
            </div>
            <div class="form-group">
                {{textarea 
                    value=noteContent 
                    class="form-control new-note-content" 
                    placeholder="Content (Markdown)"
                }}
            </div>
            <div class="form-group">
                {{input value=noteTags class="form-control" placeholder="Tags"}}
            </div>
            <button type="submit" class="btn btn-default">Create Note</button>
        </form>        
    </div>
</div>