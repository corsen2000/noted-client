<div class="row">
    <div class="col-md-12">
        <form role="form" {{action createUser on='submit'}}>
            <div class="form-group">
                {{input placeholder='Email' type='email' value=email classNames="form-control"}}
            </div>
            <div class="form-group">
                {{input placeholder='Password' type='password' value=password classNames="form-control"}}
            </div>
            <button type="submit" class="btn btn-default">Create Account</button>
        </form>        
    </div>
</div>